<Window x:Class="Quiz2.Task4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz2"
        mc:Ignorable="d"
        Title="Task4" Height="300" Width="400" Background="LightBlue">
    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Left" Margin="0,0,10,0">
            <Label Content="Student ID :" FontSize="10"/>
            <TextBox x:Name="txtId"/>
            <Button x:Name="btnAddStudent" Content="Add Student" Click="btnAddStudent_Click" Padding="5" Margin="0,10"/>
        </StackPanel>
        <ListBox x:Name="lstStudents" DisplayMemberPath="Name"/>
    </DockPanel>
</Window>
