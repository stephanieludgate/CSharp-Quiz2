<Window x:Class="Quiz2.Task5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz2"
        mc:Ignorable="d"
        Title="Task5" Height="400" Width="300" Background="LightBlue">
    <StackPanel Margin="20">
        <Button x:Name="btnClick" Content="Click!" Click="btnClick_Click" Height="35" Width="75" FontWeight="Bold"/>
        <TreeView x:Name="tvClicks" Margin="0,10">
            <TreeViewItem x:Name="tvOdd" Header="Odd" IsExpanded="True"></TreeViewItem>
            <TreeViewItem x:Name="tvEven" Header="Even" IsExpanded="True"></TreeViewItem>
        </TreeView>
    </StackPanel>
</Window>
