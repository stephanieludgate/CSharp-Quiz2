<Window x:Class="Quiz2.Task2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz2"
        mc:Ignorable="d"
        Title="Task2" Height="285" Width="275" Background="LightBlue">
    <StackPanel Margin="20">
        <Calendar x:Name="myCalendar" SelectionMode="SingleDate"/>
        <Button x:Name="btnSend" Content="Send Date" Click="btnSend_Click" Margin="0,10,0,0" Background="DarkSlateGray" Foreground="White" FontWeight="Bold" Padding="5"/>
    </StackPanel>
</Window>
